<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?headerBackgroundColor"
	android:backgroundTint="?headerBackgroundColor"
	android:orientation="vertical">

	<TextView
		android:id="@+id/tv_selected_month"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:gravity="center"
		android:textColor="@color/selector_header_text_color"
		android:paddingHorizontal="5dp"
		android:textSize="20sp"
		tools:text="September" />

	<TextView
		android:id="@+id/tv_selected_year"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:textColor="@color/selector_header_text_color"
		android:gravity="center"
		android:paddingHorizontal="5dp"
		android:textSize="20sp"
		tools:text="1993" />

</LinearLayout>