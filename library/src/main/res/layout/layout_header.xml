<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?attr/headerBackgroundColor"
	android:backgroundTint="?attr/headerBackgroundColor"
	android:orientation="horizontal">

	<TextView
		android:id="@+id/tv_selected_month"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:ellipsize="end"
		android:gravity="end"
		android:lines="1"
		android:padding="4dp"
		android:textColor="@color/selector_header_text_color"
		android:textSize="34sp"
		tools:text="June" />

	<TextView
		android:id="@+id/tv_selected_year"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:padding="4dp"
		android:textColor="@color/selector_header_text_color"
		android:textSize="34sp"
		tools:text="1993" />

</LinearLayout>